@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="player">
    <video class="player-video viewer" src="~/video/SampleVideo.mp4"></video>
    <div class="player-controls">
        <div class="progress">
            <div class="progress-filled"></div>
        </div>
        <button class="player-button toggle"></button>
        <input type="range" name="volume" class="player-slider" min=0 max="1" step="0.05" value="1" title="volume" />
        <button data-skip="-10" class="player-button">10s</button>
        <button data-skip="10" class="player-button">10s</button>
        <button class="player-button fullscreen"></button>
    </div>
</div>